<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="rriskhh.start.trial_01.Main._Main_Screen">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_add_unit_1">
    </com.google.android.gms.ads.AdView>

    <!--News Categories-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight= "4.5"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/upper">

        <!--First Row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:paddingTop="@dimen/main_box_border"
            android:paddingBottom="@dimen/main_box_border"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="center">

            <!--World Option-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/main_box_pad"
                android:id="@+id/worldLayout"
                android:orientation="vertical"
                android:background="@color/lightBackground"
                android:onClick="world">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_img_wt"
                    android:id="@+id/worldImg"
                    android:src="@drawable/world"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_text_wt"
                    android:id="@+id/worldText"
                    android:text="WORLD(W)"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#27618F"/>
            </LinearLayout>

            <!--Business Option-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/main_box_border"
                android:layout_marginRight="@dimen/main_box_border"
                android:padding="@dimen/main_box_pad"
                android:orientation="vertical"
                android:background="@color/lightBackground"
                android:id="@+id/businessLayout"
                android:onClick="business">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_img_wt"
                    android:id="@+id/businessImg"
                    android:src="@drawable/business"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_text_wt"
                    android:id="@+id/businessText"
                    android:text="BUSINESS(B)"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#A31714"/>
            </LinearLayout>

            <!--Sports Option-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/main_box_pad"
                android:background="@color/lightBackground"
                android:id="@+id/sportsLayout"
                android:orientation="vertical"
                android:onClick="sports">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_img_wt"
                    android:id="@+id/sportsImg"
                    android:src="@drawable/sports"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_text_wt"
                    android:id="@+id/sportsText"
                    android:text="SPORTS(S)"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>

        </LinearLayout>


        <!--Second Row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/main_box_border"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="center">

            <!--Technology Option-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="13dp"
                android:id="@+id/techLayout"
                android:orientation="vertical"
                android:background="@color/lightBackground"
                android:onClick="technology">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_img_wt"
                    android:id="@+id/techImg"
                    android:src="@drawable/tech"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_text_wt"
                    android:id="@+id/techText"
                    android:text="TECHNOLOGY(T)"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="#FD9C00"/>
            </LinearLayout>

            <!--Health Option-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/main_box_border"
                android:layout_marginRight="@dimen/main_box_border"
                android:padding="@dimen/main_box_pad"
                android:orientation="vertical"
                android:background="@color/lightBackground"
                android:id="@+id/healthLayout"
                android:onClick="health">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_img_wt"
                    android:id="@+id/healthImg"
                    android:src="@drawable/health"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_text_wt"
                    android:id="@+id/healthText"
                    android:text="HEALTH(H)"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#7FB500"/>
            </LinearLayout>

            <!--Movies Option-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/main_box_pad"
                android:background="@color/lightBackground"
                android:id="@+id/moviesLayout"
                android:orientation="vertical"
                android:onClick="movies">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_img_wt"
                    android:id="@+id/moviesImg"
                    android:src="@drawable/movies"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="@dimen/main_box_text_wt"
                    android:id="@+id/moviesText"
                    android:text="MOVIES(M)"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#B467BB"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--Other Function-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/main_box_border"
        android:paddingLeft="@dimen/main_box_border"
        android:paddingRight="@dimen/main_box_border"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.5"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:padding="@dimen/main_box_pad"
            android:background="@color/lightBackground"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/customLayout"
            android:onClick="custom">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@dimen/main_box_img_wt"
                android:id="@+id/customImg"
                android:src="@drawable/custom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="@dimen/main_box_text_wt"
                android:id="@+id/customText"
                android:text="CUSTOM FEED"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#362643"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:padding="@dimen/main_box_pad"
            android:orientation="vertical"
            android:background="@color/lightBackground"
            android:layout_marginLeft="@dimen/main_box_border"
            android:layout_gravity="center"
            android:id="@+id/bookmarkLayout"
            android:onClick="bookmarks">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@dimen/main_box_img_wt"
                android:id="@+id/bookmarkImg"
                android:src="@drawable/bookmark_large"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="@dimen/main_box_text_wt"
                android:id="@+id/bookmarkText"
                android:text="BOOKMARKS"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#DD9A05"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/main_box_border"
        android:paddingTop="@dimen/main_box_border"
        android:background="@color/colorPrimaryDark"
        android:onClick="loginOrRegister">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/loginImg"
            android:background="@color/lightBackground"
            android:src="@drawable/login"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightBackground"
            android:paddingTop="4dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#CD170E"
            android:text="Login or Register"
            android:textSize="18dp"
            android:id="@+id/accountOrLogin"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/loginImg" />

    </RelativeLayout>

</LinearLayout>
