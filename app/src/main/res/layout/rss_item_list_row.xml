<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dip" >

    <TextView android:id="@+id/page_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/thumbail_url"/>

    <ImageView android:layout_width="match_parent"
        android:layout_height="@dimen/thumbHeight"
        android:id="@+id/thumbail"
        android:layout_marginBottom="10dp"
        />

    <!-- Article title -->
    <TextView
        android:id="@+id/title"
        android:layout_below="@+id/thumbail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dip"
        android:textSize="20dip"
        android:textStyle="bold"
        android:textColor="@color/darkBackground" />



    <!-- published date -->
    <TextView
        android:id="@+id/pub_date"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dip"
        android:textSize="16dip"
        android:textColor="@color/colorPrimaryDark"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/image"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/pub_date"
        android:layout_alignParentRight="true"
        android:paddingBottom="6dip"
        android:src="@drawable/set"
    />
    <!--android:onClick="bookmark" -->

    <!-- article description -->
    <TextView android:id="@+id/desc"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="6dip"
        android:textSize="15dip"
        android:textStyle="italic"
        android:textColor="#716C6C"
        android:layout_below="@id/pub_date"/>
</RelativeLayout>